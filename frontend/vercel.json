{
  "framework": "vite",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/:path*",       "destination": "https://bionda-db.onrender.com/:path*" },
    { "source": "/(.*)",             "destination": "/index.html" }
  ]
}
